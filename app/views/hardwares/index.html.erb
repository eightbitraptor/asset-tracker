<h1>Listing hardware</h1>

<table>
  <tr>
    <th>Serial number</th>
    <th>Date purchased</th>
    <th>User</th>
    <th>Hardware type</th>
  </tr>

<% for hardware in @hardwares %>
  <tr>
    <td><%=h hardware.serial_number %></td>
    <td><%=h hardware.date_purchased %></td>
    <td><%=h hardware.user_id %></td>
    <td><%=h hardware.hardware_type_id %></td>
    <td><%= link_to 'Show', hardware %></td>
    <td><%= link_to 'Edit', edit_hardware_path(hardware) %></td>
    <td><%= link_to 'Destroy', hardware, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

