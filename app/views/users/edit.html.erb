<h1>Editing user</h1>

<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
<table>
  <tr>
    <td><%= f.label :firstname %></td>
    <td><%= f.text_field :firstname %></td>
  </tr>
  <tr>
    <td><%= f.label :surname %></td>
    <td><%= f.text_field :surname %></td>
  </tr>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :position %></td>
    <td><%= f.text_field :position %></td>
  </tr>
  <tr>
    <td><%= f.label :joined_on %></td>
    <td><%= f.unobtrusive_date_text_picker :joined_on, :include_blank => true %></td>
  </tr>
  <tr>
    <td><%= f.label :left_on %></td>
    <td><%= f.unobtrusive_date_text_picker :left_on, :include_blank => true %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.submit "Update" %></td>
  </tr>  
</table>
<% end %>


